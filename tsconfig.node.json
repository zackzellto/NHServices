{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist", // Adjust based on where you want TypeScript compilation output
    "rootDir": "./", // Adjust based on your TypeScript source files location
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/**/*.ts" // Adjust to include your TypeScript source directories
  ],
  "exclude": ["node_modules", "dist"]
}
